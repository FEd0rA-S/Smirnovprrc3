<Window x:Class="Smirnovprrc3.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Username"/>
            <TextBox Name="txtUsername" Margin="0,5"/>
            <Label Content="Password"/>
            <PasswordBox Name="txtPassword" Margin="0,5"/>
            <Button Name="btnLogin" Click="btnLogin_Click" Content="Login" Width="100" Margin="0,10"/>
            <Button Name="btnRegister" Click="btnRegister_Click" Content="Register" Width="100" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
